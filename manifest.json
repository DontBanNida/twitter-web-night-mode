{
	"manifest_version": 2,
	"name": "Twitter Web - Night Mode",
	"version": "1.0",
	"description": "Android/iOS like night mode for twitter web app",
	"icons": {

	},

	"content_scripts": [
		{
			"matches": [
				"https://twitter.com/",
				"https://twitter.com/i/cards/*"
			],
			"js": ["twitter-night-mode.js"],
			"all_frames": true,
			"run_at" : "document_end"
		}
	],

	"web_accessible_resources": ["twitter-night-mode.css"],

	"page_action": {
		"default_icon": {
			"19": "images/icon19.jpg",
			"38": "images/icon38.png"
		},
		"default_title": "Twitter Night Mode",
		"default_popup": "popup.html"
	},

	"permissions": [
		"activeTab"
	],

	"author": "Sriram Thiagarajan"
}