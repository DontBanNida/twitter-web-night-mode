{
	"manifest_version": 2,
	"name": "Twitter Web - Night Mode",
	"version": "1.0",
	"description": "Android/iOS like night mode for twitter web app",

	"background": {
		"scripts": [
			"twitter-night-mode-bg.js"
		],
		"persistent": false
	},

	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"128": "images/icon128.png"
	},

	"content_scripts": [
	 {
		 "matches": [
		    "https://twitter.com/",
		    "https://twitter.com/i/cards/*"
		 ],
		 "js": ["twitter-night-mode.js"],
		 "all_frames": true,
		 "run_at" : "document_start"
	 }
	],
	"web_accessible_resources": ["twitter-night-mode.css"],

	"permissions": [
		"https://twitter.com/"
	],

	"author": [
		{
			"name": "Sriram Thiagarajan",
			"github": "tsriram"
		}
	]
}